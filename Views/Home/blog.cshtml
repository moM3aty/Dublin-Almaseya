@model List<blog>
<!-- Hero Section -->
<section class="hero content" id="home">
    <div class="container text-center" data-aos="zoom-in" data-aos-delay="100">
        <h1 class="display-3 fw-bold mb-5">
            <span class="d-block line line-1" data-en="From Idea And Design" data-ar="من الفكرة والتصميم إلى"> من الفكره والتصميم إلى</span>
            <span class="d-block line line-2" data-en="To Tangible Reality" data-ar=" واقع ملموس">  واقع ملموس</span>
        </h1>

        <div class="d-flex justify-content-center gap-3">
            <a href="#services" class="btn bg-transparent text-white border border-white btn-lg" data-en="Services" data-ar="خدماتنا">خدماتنا <span class="arrow">→</span></a>
            <a href="#projects" class="btn btn-primary btn-lg" data-en="Projects" data-ar="تصفح الان">تصفح الان <span class="arrow">→</span></a>
        </div>
    </div>

    <!-- Wave Animation -->
    <div class="wave-container">
        <div class="wave"></div>
        <div class="wave wave2"></div>
        <div class="wave wave3"></div>
    </div>
</section>

<div class="container py-5">

    <!-- 🔹 مقدمة الصفحة -->
    <div class="text-center mb-5">
        <h1 class="display-4">مدونتنا</h1>
        <p class="lead text-muted">اكتشف أحدث المقالات، النصائح، والأخبار في عالمنا.</p>
    </div>

    <!-- 🔸 سكاشن المقالات -->
    <div class="row justify-content-center">
        @foreach (var post in Model)
        {
            <div class="col-md-8 mb-4">
                <div class="card shadow">
                    <img src="@post.Img" class="card-img-top" alt="صورة @post.Name">
                    <div class="card-body">
                        <h3 class="card-title">@post.Name</h3>
                        <p class="card-text text-muted">@post.Description</p>
                    </div>
                </div>
            </div>
        }
    </div>

</div>

